<div class="modal fade" id="mNuevo" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edición de datos</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputCod">Código de usuario</label>
                            <input type="text" class="form-control" id="inputCod" placeholder="Código de ítem" readonly data-bind="value: form_item().n_id_usuario">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputLogin">Login</label>
                            <input type="text" class="form-control" id="inputLogin" placeholder="" maxlength="100" data-bind="value: form_item().c_login" autocomplete="off">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputDNI">DNI</label>
                            <input type="text" class="form-control" id="inputDNI" placeholder="" maxlength="100" data-bind="value: form_item().c_dni" autocomplete="off">
                        </div>

                        <div class="form-group col-md-12">
                            <label for="inputApePaterno">Ape. Paterno</label>
                            <input type="text" class="form-control" id="inputApePaterno" placeholder="" maxlength="100" data-bind="value: form_item().c_appaterno" autocomplete="off">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputApeMaterno">Ape. Materno</label>
                            <input type="text" class="form-control" id="inputApeMaterno" placeholder="" maxlength="100" data-bind="value: form_item().c_apmaterno" autocomplete="off">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputNombre">Nombre</label>
                            <input type="text" class="form-control" id="inputNombre" placeholder="" maxlength="100" data-bind="value: form_item().c_nombres" autocomplete="off">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputNombreCompleto">Nombre completo</label>
                            <input type="text" class="form-control" id="inputNombreCompleto" placeholder="" maxlength="100" data-bind="value: form_item().c_nombrec" autocomplete="off">
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputCargo">Cargo</label>
                            <input type="text" class="form-control" id="inputCargo" placeholder="" maxlength="100" data-bind="value: form_item().c_cargo" autocomplete="off">
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="checkEstado" data-bind="checked: form_item().n_estado">
                            <label class="form-check-label" for="checkEstado">
                                Estado
                            </label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" data-bind="click:$root.nuevo_item_edit">Guardar</button>
            </div>
        </div>
    </div>
</div>