<div class="modal fade" id="mRoles" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Registro de roles <strong><span data-bind="text:desc_rol"></span></strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form onsubmit="return false">
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <table class="table table-sm table-responsive table-hover table-new" style="border-top: 1px solid #f59d24;">
                                <thead class="">
                                    <tr class="rounded-top" style="height: 40px;">
                                        <th class="anchobusq-ruc">
                                            Rol
                                        </th>
                                        <th class="anchobusq-ruc">
                                            Descripción
                                        </th>
                                        <th class="anchobusq-dni">
                                            Habilitado
                                        </th>
                                    </tr>
                                </thead>
                                <tbody data-bind="foreach: lista_objetos_rol">
                                    <tr>
                                        <td data-bind="text: v_rol"></td>
                                        <td data-bind="text: v_descripcion"></td>
                                        <td class="text-center">
                                            <input class="form-check-input" type="checkbox" data-bind="checked: roles, event: { change: $root.cambio_estado_rol }">
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>